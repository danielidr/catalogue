<%= form_with(model: payment, local: true) do |form| %>
    <% if payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% payment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
      <%= form.label :order %>
      <%= form.select :order_id, options_for_select(@orders), prompt: "Select order" %>
  </div>

  <div class="field">
    <%= form.label :total %>
    <%= form.number_field :total %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state %>
  </div>

  <div class="field">
    <%= form.label :token %>
    <%= form.text_field :token %>
  </div>

  <div class="field">
      <%= form.label :payment_method %>
      <%= form.select :paymentable_type, options_for_select(["stripes", "paypal", "transbank"]), prompt: "Select payment method" %>
  </div>

  <div class="field">
    <%= form.label :transbank_method %>
    <%= form.select :method_name, options_for_select(@method) , prompt: "Select method"%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
